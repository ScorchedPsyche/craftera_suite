        <groupId>com.github.scorchedpsyche.craftera_suite.modules</groupId>
        <version>0.0.1</version>
    </parent>

    <artifactId>craftera_suite-achievements</artifactId>
    <name>craftera_suite-achievements</name>
    <version>0.0.1</version>
    <description>Player personal and server-first achievement management system.</description>
    <url>https://github.com/ScorchedPsyche/craftera_suite</url>

    <build>
        <resources>
            <resource>
                <directory>src/main/resources</directory> <!-- (your resources folder location) -->
